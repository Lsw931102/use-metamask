{
	"name": "use-metamask-cool",
	"version": "1.0.1",
	"sourceVersion": "1.1.2",
	"description": "Connect Metamask with React Hook",
	"author": {
		"name": "Muhammed Tanrikulu",
		"email": "funnyli12388@gmail.com"
	},
	"homepage": "https://github.com/Lsw931102/use-metamask",
	"keywords": [
		"react",
		"hooks",
		"react-hooks",
		"blockchain",
		"web3",
		"wallet",
		"crypto",
		"metamask"
	],
	"main": "index.js",
	"private": false,
	"scripts": {
		"build": "babel src --out-dir .",
		"bump": "npm version",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:cov:watch": "jest --coverage --watch",
		"example": "cd example && yarn install && yarn package",
		"prepublishOnly": "yarn build",
		"watch": "nodemon --watch src --exec \"yarn build\""
	},
	"license": "MIT",
	"devDependencies": {
		"@babel/cli": "^7.12.10",
		"@babel/core": "^7.12.10",
		"@babel/preset-env": "^7.12.10",
		"@babel/preset-react": "^7.12.10",
		"@testing-library/react": "^11.2.2",
		"@testing-library/react-hooks": "^3.7.0",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.5",
		"jest": "^26.6.3",
		"nodemon": "^2.0.6",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"regenerator-runtime": "^0.13.7"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Lsw931102/use-metamask"
	},
	"bugs": {
		"url": "https://github.com/Lsw931102/use-metamask/issues"
	},
	"jest": {
		"collectCoverageFrom": [
			"src/*.js"
		],
		"modulePathIgnorePatterns": [
			"example"
		],
		"roots": [
			"<rootDir>/test"
		],
		"setupFilesAfterEnv": [
			"<rootDir>/test/setupTests.js"
		]
	},
	"dependencies": {}
}
